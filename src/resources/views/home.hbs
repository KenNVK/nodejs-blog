<div class="my-4 ">
  <div class="row">
    {{#each courses}}
    <div class="courses col-sm-6 col-lg-4">
      <div class="card mt-3 mx-1">
        <a href="/courses/{{this.slug}}">
          <div style="background-image: url({{this.image}});" class="card-img-top" ></div>
        </a>
        <div class="card-body">
          <a href="/courses/{{this.slug}}">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text">{{this.description}}</p>
          <div class="text-center">
            <a href="#" class="btn btn-primary">Mua khóa học</a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>